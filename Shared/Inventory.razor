            builder.AddAttribute(17, "class", "btn btn-primary");
            builder.AddAttribute(18, "style", "margin:2px;height:2rem;line-height: initial;");
            if (item.Key.Value < GameState.expensiveItemThreshold || trySellingExpensiveItem == true)
