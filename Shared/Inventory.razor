            builder.AddAttribute(10, "class", "btn btn-primary");
            builder.AddAttribute(11, "style", "margin:2px;height:2rem;line-height: initial;");
            if ((item.Key.Value < GameState.expensiveItemThreshold && GameState.sellGuard == false) || trySellingExpensiveItem == true)
            {

